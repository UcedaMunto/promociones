{% extends 'base.html.twig' %}

{% block title %}Establecimientos{% endblock %}

{% block body %}
    <table class="table" id="tabla_" id="tabla_">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Activo</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for promo_establecimiento in promo_establecimientos %}
            <tr>
                <td>{{ promo_establecimiento.id }}</td>
                <td>{{ promo_establecimiento.nombre }}</td>
                <td>{{ promo_establecimiento.activo ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('promo_establecimiento_show', {'id': promo_establecimiento.id}) }}"><i class="fa fa-eye" style="font-size:36px"></i></a>
                    <a href="{{ path('promo_establecimiento_edit', {'id': promo_establecimiento.id}) }}"><i class="fa fa-edit" style="font-size:36px"></i></a>
                    <a href="{{ path('promo_establecimiento_add_contacto', {'id': promo_establecimiento.id}) }}">+ Contacto</a>
                    <a href="{{ path('promo_sucursal_new', {'establecimiento': promo_establecimiento.id }) }}">+ Sucursal</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('promo_establecimiento_new') }}"><i class="fa fa-plus" style="font-size:36px"></i></a>
{% endblock %}

{% block js_general %}
    <script src="{{ asset('js/general.js') }}" ></script>
{% endblock %}
