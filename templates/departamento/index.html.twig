{% extends 'base.html.twig' %}

{% block title %}Departamento index{% endblock %}

{% block body %}

    <table class="table" id="tabla_">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for departamento in departamentos %}
            <tr>
                <td>{{ departamento.id }}</td>
                <td>{{ departamento.nombre }}</td>
                <td>
                    <a href="{{ path('departamento_show', {'id': departamento.id}) }}">show</a>
                    <a href="{{ path('departamento_edit', {'id': departamento.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('departamento_new') }}">Create new</a>
{% endblock %}
{% block js_general %}
    <script src="{{ asset('js/general.js') }}" ></script>
{% endblock %}
