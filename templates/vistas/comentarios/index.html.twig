{% extends 'base.html.twig' %}

{% block title %}Comentarios index{% endblock %}

{% block body %}
    <h1>Comentarios index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Mensaje</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for comentario in comentarios %}
            <tr>
                <td>{{ comentario.id }}</td>
                <td>{{ comentario.mensaje }}</td>
                <td>
                    <a href="{{ path('comentarios_show', {'id': comentario.id}) }}">show</a>
                    <a href="{{ path('comentarios_edit', {'id': comentario.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


{% endblock %}
