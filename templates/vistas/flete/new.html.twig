{% extends 'base.html.twig' %}

{% block title %}Creando nuevo flete{% endblock %}

{% block body %}
    <h1>Nuevo Flete</h1>
    <a href="{{ path('flete_index') }}">Ir a lista de fletes</a>

        {{ form_start(form , { 'attr': {'id': 'envio_dato'} } )}}
            <div class="form-row">
                <div class="form-group col-md-4">                  
                    <label class="small mb-1" >Precio de venta</label>
                    {{ form_widget(form.precioVenta) }}
                    {{ form_errors(form.precioVenta) }}                     
                </div>
                <div class="form-group col-md-4">                
                    <label class="small mb-1" >Costo</label>
                    {{ form_widget(form.costo) }}
                    {{ form_errors(form.costo) }}                                  
                </div>
                <div class="form-group col-md-4">                           
                    <label class="small mb-1" >Tipo Flete</label>
                    {{ form_widget(form.tipo) }}
                    {{ form_errors(form.tipo) }}        
                </div>
            </div>

            <div class="form-row">
                <div id="dealer" class="form-group col-md-4">                        
                    <label class="small mb-1" >Yarda</label>
                    {{ form_widget(form.yarda) }}
                    {{ form_errors(form.yarda) }}                            
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-4">
                        <button type="submit" id='envio' class="btn btn-primary btn-block"> {{ button_label|default('Guardar') }} </button>                 
                </div>
            </div>
            
        {{ form_end(form) }}


{% endblock %}



{% block js_general %}
    <script src="{{ asset('js/general.js') }}" ></script>
{% endblock %}