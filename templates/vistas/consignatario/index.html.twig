                <td>{{ consignatario.nombre }}</td>
                <td>{{ consignatario.direccion }}</td>
                <td>{{ consignatario.direccion2 }}</td>
                <td>{{ consignatario.email }}</td>
                <td>{{ consignatario.telefono }}</td>
                <td>{{ consignatario.encargado }}</td>
                <td>{{ consignatario.nit }}</td>
                <td>
                    <a href="{{ path('consignatario_show', {'id': consignatario.id}) }}">show</a>
                    <a href="{{ path('consignatario_edit', {'id': consignatario.id}) }}">edit</a>
                </td>
            </tr>
