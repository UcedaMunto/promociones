{% extends 'base.html.twig' %}

{% block title %}Consignatarios{% endblock %}

{% block body %}
  <a href="{{ path('consignatario_new') }}">Crear nuevo consignatario</a>

    <table id="tabla_consignatario" class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Direccion</th>
                <th>Direccion2</th>
                <th>Email</th>
                <th>Telefono</th>
                <th>Encargado</th>
                <th>Nit</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for consignatario in consignatarios %}
