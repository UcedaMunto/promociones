<div class="card-body">
    <table class="table" id="listaReunionUltimas">
        <thead>
            <tr>
                <th id="djUltimoNumero">Número</th>
                <th>Titulo</th>
                <th>Fecha de inicio </br>de reunión</th>
                <th>Descripción</th>
                <th>Departamentos</th>
                <th>Accion</th>
            </tr>
        </thead>
        <tbody>
            {% for discusion_jefatura in discusion_jefaturas_ultimas %}
            <tr>
                <td align="center">{{ discusion_jefatura.id }}</td>
                <td align="center">{{ discusion_jefatura.titulo }}</td>
                <td align="center">{{ discusion_jefatura.fecha ? discusion_jefatura.fecha|date('d-m-Y') : '' }}</td>
                <td align="center">{{ discusion_jefatura.descripcion }}</td>
                <td>
                    
                {% for departamentos in prueba_funcion_a.verdepartamentos(discusion_jefatura.id)  %}
                    {{ departamentos.departamentoEmpresa.nombre }} 
                    <br/>
                {% endfor %}
                </td>
                <td>
                    <a  class="mostrarDiscusiones"   href="{{ path('discusion_jefatura_show', {'id': discusion_jefatura.id}) }}"  data-toggle="modal" data-target="#mostarInfoDJ">Ver informacion</a>
                    --
                    <a  class="editarDiscusiones"    href="{{ path('discusion_jefatura_edit', {'discusionJefatura': discusion_jefatura.id}) }}"  data-toggle="modal" data-target="#editarInfoDJ"  >Editar </a> 
                </td> 
            </tr>
                {% else %}
            <tr>
                <td colspan="4">No se encuentran discusiones de jefaturas</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>

