{% extends 'base.html.twig' %}

{% block title %}Categorias{% endblock %}

{% block body %}

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Descripcion</th>
                <th>Activo</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for promo_categorium in promo_categorias %}
            <tr>
                <td>{{ promo_categorium.id }}</td>
                <td>{{ promo_categorium.nombre }}</td>
                <td>{{ promo_categorium.descripcion }}</td>
                <td>{{ promo_categorium.activo ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('promo_categoria_show', {'id': promo_categorium.id}) }}"><i class="fa fa-eye" style="font-size:36px"></i></a>
                    <a href="{{ path('promo_categoria_edit', {'id': promo_categorium.id}) }}"><i class="fa fa-edit" style="font-size:36px"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('promo_categoria_new') }}"><i class="fa fa-plus" style="font-size:36px"></i></a>
{% endblock %}
