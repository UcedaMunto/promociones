{% extends 'base.html.twig' %}

{% block title %}Municipios{% endblock %}

{% block body %}

    <table class="table" id="tabla_">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for municipio in municipios %}
            <tr>
                <td>{{ municipio.id }}</td>
                <td>{{ municipio.nombre }}</td>
                <td>
                    <a href="{{ path('municipio_show', {'id': municipio.id}) }}">show</a>
                    <a href="{{ path('municipio_edit', {'id': municipio.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('municipio_new') }}"><i class="fa fa-plus" style="font-size:36px"></i></a>
{% endblock %}
{% block js_general %}
    <script src="{{ asset('js/general.js') }}" ></script>
{% endblock %}

